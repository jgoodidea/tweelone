<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <%= link_to home_path, :class => "d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none" do %>
            <span class="fs-5 d-none d-sm-inline">Tweelone</span>
        <% end %>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100" id="menu">
            <li class="nav-item">
                <%= link_to home_path, :class => "nav-link align-middle px-0" do %>
                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                <% end %>
            </li>
            <li class="nav-item">
                <%= link_to user_path(current_user), :class => "nav-link align-middle px-0" do %>
                    <i class="fs-4 bi-person"></i> <span class="ms-1 d-none d-sm-inline">Profile</span>
                <% end %>
            </li>
            <li class="nav-item mx-auto">
                <%= link_to new_tweet_path, class: "btn btn-lg btn-primary rounded-pill" do %>
                    <i class="fs-4 bi-plus-circle d-inline d-sm-none"></i>
                    <span class="ms-1 d-none d-sm-inline">Tweet</span>
                <% end %>
            </li>
        </ul>
        <hr>
        <div class="dropdown pb-4">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <%= gravatar_for(current_user, { size: 30}) %>
                <span class="d-none d-sm-inline mx-1">
                    <%= current_user.username %>
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                <li>
                    <a class="dropdown-item" href="#">Settings</a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <%= button_to "Sign out", logout_path, method: :delete, class: "dropdown-item" %>
                </li>
            </ul>
        </div>
    </div>
</div>
