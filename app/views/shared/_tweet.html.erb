<% obj.each do |tweet| %>
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <div class="">
                <div class="tweet-title">
                    <%= link_to tweet.title, tweet_path(tweet) %>
                </div>
                <div class="tweet-body">
                    <%= truncate(tweet.content, length: 100) %>
                    <div class="tweet-meta-details">
                        <small>Created by: <%= tweet.user.username if tweet.user %>, <%= time_ago_in_words(tweet.created_at) %> ago, last updated: <%= time_ago_in_words(tweet.updated_at) %> ago</small>
                    </div>
                </div>
                <div class="tweet-actions">
                    <%= link_to "Edit", edit_tweet_path(tweet), class: "btn btn-sm btn-primary" %>
                    <%= button_to "Delete", tweet_path(tweet), method: :delete, data: { confirm: "are you sure you want to delete this tweet?"}, class: "btn btn-sm btn-danger" %>
                </div>
            </div>
        </div>
    </div>
<% end %>
